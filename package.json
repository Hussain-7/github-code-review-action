{
  "name": "code-review-agent",
  "version": "1.0.0",
  "description": "Scalable code review agent built with Claude Agent SDK",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "bundle": "ncc build dist/action-entry.js -o dist --minify",
    "package": "npm run build && npm run bundle",
    "dev": "tsx src/index.ts",
    "review": "tsx review.ts",
    "github-review": "tsx scripts/github-review.ts",
    "cli": "tsx src/cli.ts",
    "test": "jest",
    "lint": "biome lint ./src",
    "lint:fix": "biome lint --write ./src",
    "format": "biome format --write ./src",
    "check": "biome check --write ./src",
    "ci": "biome ci ./src"
  },
  "keywords": [
    "claude",
    "code-review",
    "ai",
    "agent",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@anthropic-ai/claude-agent-sdk": "latest",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.5",
    "@vercel/ncc": "^0.38.4",
    "commander": "^14.0.2",
    "jest": "^29.7.0",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
